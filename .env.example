# SQLGlot E6 Transpiler Configuration
# Copy this file to .env and configure values as needed

# ===========================
# Server Configuration
# ===========================

# Number of Uvicorn worker processes (1-32)
# Recommendation: Set to number of CPU cores for production
E6_UVICORN_WORKERS=1

# Host to bind the server to
E6_UVICORN_HOST=0.0.0.0

# Port to bind the server to
E6_UVICORN_PORT=8100

# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
E6_LOG_LEVEL=INFO

# ===========================
# API Configuration
# ===========================

# Maximum allowed query length in characters
E6_MAX_QUERY_LENGTH=1000000

# Request timeout in seconds
E6_REQUEST_TIMEOUT=120

# ===========================
# Transpilation Defaults
# ===========================
# These are default values used when not specified in API request

# Default target dialect for transpilation
E6_DEFAULT_TARGET_DIALECT=e6

# Default setting for pretty-printing SQL output
E6_DEFAULT_PRETTY_PRINT=true

# Default setting for table alias qualification
# When enabled, adds table aliases to column references (e.g., users.id instead of id)
E6_DEFAULT_ENABLE_TABLE_ALIAS_QUALIFICATION=false

# Default setting for two-phase qualification scheme
# When enabled, transforms catalog.schema references in a separate phase
E6_DEFAULT_USE_TWO_PHASE_QUALIFICATION=false

# Default setting for skipping E6 transpilation
# Only applies when two-phase qualification is enabled
# Useful for lightweight schema transformations without full transpilation
E6_DEFAULT_SKIP_E6_TRANSPILATION=false

# Default setting for ASCII normalization
# Converts Unicode whitespace to ASCII before processing
E6_DEFAULT_NORMALIZE_ASCII=false

# Default error handling level for SQL parsing
# Options: IGNORE, WARN, RAISE
E6_DEFAULT_ERROR_LEVEL=RAISE

# ===========================
# SQLGlot Dialect Configuration
# ===========================
# These settings configure the E6 SQL dialect behavior

# Character used to quote identifiers (table/column names)
# Default: " (double quote)
E6_IDENTIFIER_QUOTE_CHAR="

# Strategy for normalizing SQL keywords
# Options: LOWERCASE, UPPERCASE, CASE_SENSITIVE, CASE_INSENSITIVE
# Default: LOWERCASE (SELECT becomes select)
E6_NORMALIZATION_STRATEGY=LOWERCASE

# Array indexing offset
# Options: 0 (zero-based) or 1 (one-based)
# Default: 1 (arrays start at index 1)
E6_INDEX_OFFSET=1

# Preserve original identifier case sensitivity
# When true, maintains the original case of table/column names
E6_PRESERVE_ORIGINAL_NAMES=true

# Enable automatic identifier quoting
# When true, applies quote_identifiers() to add quotes around identifiers
# This helps preserve case sensitivity and handle special characters
E6_ENABLE_IDENTIFIER_QUOTING=true
